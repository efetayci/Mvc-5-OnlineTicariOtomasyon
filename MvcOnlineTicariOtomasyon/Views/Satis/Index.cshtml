
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>

<br /><br />

<table class=" = table table-bordered" style="margin-top:20px;" id="tbl1">
    <thead>
        <tr class="table table-info">
            <th>SATIŞ İD</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>FİYAT</th>
            <th>ADET</th>
            <th>TOPLAM TUTAR</th>
            <th>TARİH</th>
            <th>GÜNCELEE</th>
            <th>DETAY</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SatisId</td>
                <td>@item.Urun.UrunAD</td>
                <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.fiyat</td>
                <td>@item.Adet</td>
                <td>@item.ToplamTutar</td>
                <td>@item.Tarih.ToString("d")</td>
                <td><a href="/Satis/SatisGetir/@item.SatisId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@item.SatisId" class="btn btn-default" style="background-color:darkorange">Detaylar</a></td>
            </tr>
        }
    </tbody>

</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Satış Yap</a>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>