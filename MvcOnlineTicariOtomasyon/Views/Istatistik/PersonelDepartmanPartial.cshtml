


@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.PersonelDepartman>

@{ int count = 0;
    int sayi = 0;}

@foreach (var item in Model)
{
    <tr>
        <td>@{count++;}@count</td>
        <td>@item.DepartmanAdi</td>
        <td>
            @if (item.PersonelSayisi < 2)
            {
                { sayi =  item.PersonelSayisi*10 / ViewBag.toplamPers ;}
                <div class="progress progress-xs">
                    <div class="progress-bar progress-bar-danger" style="width:@sayi%"></div>
                </div>
            }
            @if (item.PersonelSayisi == 2)
            {
                { sayi = item.PersonelSayisi * 10 / ViewBag.toplamPers; }
                <div class="progress progress-xs">
                    <div class="progress-bar bg-warning" style="width: @sayi%"></div>
                </div>
            }
            @if (item.PersonelSayisi > 2)
            {
                { sayi = item.PersonelSayisi * 10 / ViewBag.toplamPers; }
                <div class="progress progress-xs progress-striped active">
                    <div class="progress-bar bg-success" style="width: @sayi%"></div>
                </div>
            }

        </td>
        <td>
            @if (@item.PersonelSayisi <2)
            {
                <span class="badge bg-danger">@item.PersonelSayisi</span>
            }
            @if (@item.PersonelSayisi == 2)
            {
                <span class="badge bg-warning">@item.PersonelSayisi</span>
            }
            @if (@item.PersonelSayisi > 2)
            {
                <span class="badge bg-success">@item.PersonelSayisi</span>
            }
        </td>
    </tr>

}
