@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.Urun>


@using System.Globalization 

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Listesi Fixed Header Table</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>AD</th>
                            <th>MARKA</th>
                            <th>STOK</th>
                            <th>KAREGORİ</th>
                            <th>SATIŞ FİYAT</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Durum == true) 
                            {
                                <tr>
                                    <td>@item.UrunId</td>
                                    <td>@item.UrunAD</td>
                                    <td>@item.UrunMarka</td>
                                    <td>@item.UrunStok</td>
                                    <td>@item.Kategori.KategoriAd</td>
                                    <td>@item.SatisFiyat.ToString("N2",new CultureInfo("es-ES"))₺</td>
                                    
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
