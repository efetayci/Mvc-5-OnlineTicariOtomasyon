
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{ 
    var grafik = new Chart(width: 500, height :500);
    grafik.AddTitle(text: "Kategoriler ve Ürün Sayıları");
    grafik.AddLegend(title: "Degerler");

    grafik.AddSeries(
        name:"Veriler",
        chartType: "Pie",//Bubble , Doughnut ,Area , Bar ,Pie
        xValue:new[] { "Beyaz Eşya", "Televizyon", "Bilgisayar" },
        yValues: new[] {500,250,340}
        );
    grafik.Write();
}