
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div style="color:brown;"><p><h2><ins>Kargolar</ins></h2></p></div>
<br />

@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<KargoDetay>

<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("aranan")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered" style=" margin-top:20px;">
    <tr class="table table-info">
        <th>Takip Kodu</th>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.TakipKodu</td>
            <td>@item.Personel</td>
            <td>@item.Alici</td>
            <td>@item.Tarih</td>
            <td><a href="/Kargo/KargoDetay/@item.TakipKodu" class="btn btn-warning">Detaylar</a></td>


        </tr>

    }


</table>

<a href="/Kargo/KargoEkle" class="btn btn-info">Yeni Kargo Girişi </a>
